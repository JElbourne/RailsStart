<% content_for :page_title do %>
  Start Subscription
<% end %>

<%= form_tag subscription_path, method: :post, id: "payment-form", class: "form-horizontal" do %>
  <%= render partial: "sub_info" %>
<% if current_user.card_last4? %>
    <div class="card-on-file">
    <h3>Current Card on File</h3>

    <div><%= current_user.card_type %> **** **** **** <%=current_user.card_last4 %></div>
    <div>Expires: <%= current_user.card_exp_month %> / <%=current_user.card_exp_year %></div>
    <p><%= link_to "Use a different card", "#", class: "use-diff-card" %></p>
    </div>
  <% end %>
  <div class="card-fields <%= "hidden" if current_user.card_last4 %> ">
    <%= render partial: "form_fields"  %>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <input type="submit" class="btn btn-default" value="Start Subscription">
    </div>
  </div>
<% end %>
